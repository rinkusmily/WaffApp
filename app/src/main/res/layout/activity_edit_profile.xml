<?xml version="1.0" encoding="utf-8"?>


<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">


    <data >

        <variable name="editProfileActivity"
                  type="shrinkcom.waff.com.activity.EditProfileActivity"/>
    </data>

    <LinearLayout android:layout_width="match_parent"
                  android:orientation="vertical"
                  android:background="@color/white"
                  android:layout_height="match_parent">

        <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                app:navigationIcon="@drawable/ic_arrow_back_black_24dp"
                app:title="@string/edit_profile"/>


        <ScrollView
                tools:context=".activity.EditProfileActivity"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
            >


                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="@dimen/_20sdp">


                    <FrameLayout
                            android:id="@+id/linearUser"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:layout_gravity="center"
                            android:gravity="center">

                        <ImageView
                                android:id="@+id/imageUserPick"
                                android:layout_width="150dp"
                                android:layout_height="150dp"
                        />

                        <ImageView
                                android:id="@+id/imageUserSet"
                                android:layout_gravity="end|bottom"
                                android:layout_width="40dp"
                                android:scaleType="fitXY"
                                android:layout_height="40dp"
                                android:src="@drawable/add_image"/>
                    </FrameLayout>

                    <android.support.design.widget.TextInputLayout
                            android:id="@+id/input_layout_username_prof"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_20sdp">

                        <EditText
                                android:id="@+id/input_username_prof"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/markweblight"
                                android:hint="@string/username"
                                android:inputType="text"
                                android:maxLength="30"
                                android:singleLine="true" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                            android:id="@+id/input_layout_nickname"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        <EditText
                                android:id="@+id/input_nickname"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/markweblight"
                                android:hint="@string/nickname"
                                android:inputType="text"
                                android:maxLength="30"
                                android:singleLine="true" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                            android:id="@+id/input_layout_email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        <EditText
                                android:id="@+id/input_email"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/markweblight"
                                android:hint="@string/email"
                                android:maxLength="30"
                                android:inputType="textEmailAddress"
                                android:singleLine="true" />
                    </android.support.design.widget.TextInputLayout>

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="1">



                        <android.support.design.widget.TextInputLayout
                                android:id="@+id/input_layout_mobile"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">

                            <EditText
                                    android:id="@+id/input_mobile"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/markweblight"
                                    android:hint="@string/phone"
                                    android:maxLength="10"
                                    android:inputType="phone"
                                    android:singleLine="true" />
                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout>



                    <LinearLayout
                            android:gravity="center"
                            android:layout_marginTop="@dimen/tendps"
                            android:weightSum="10"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        <TextView
                                android:textColor="@color/black"
                                android:textSize="@dimen/_16sdp"
                                android:layout_weight="4.8"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/markweblight"
                                android:hint="@string/what_they_are_doing_outside"

                        />



                        <TextView
                                android:layout_gravity="center_vertical"

                                android:textColor="@color/black"
                                android:textSize="@dimen/_16sdp"
                                android:layout_weight="0.5"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/markweblight"
                                android:hint=":"
                                android:maxLength="10"
                        />



                        <Spinner
                                android:layout_gravity="center_vertical"
                                android:padding="1dp"
                                android:background="@drawable/spinner_back"
                                android:id="@+id/action_spiinner"
                                android:textSize="@dimen/_16sdp"
                                android:layout_weight="4.7"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"

                        />

                    </LinearLayout>







                    <Button
                            android:onClick="@{() -> editProfileActivity.requestForUpdateProfile()}"
                            android:id="@+id/btn_login"
                            android:layout_width="180dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="30dp"
                            android:background="@drawable/gradient_background"
                            android:fontFamily="@font/markwebbold"
                            android:gravity="center"
                            android:text="@string/update_prof"
                            android:textAllCaps="false"
                            android:textColor="#000"
                            android:textSize="14dp" />
                </LinearLayout>
            </LinearLayout>


        </ScrollView>


    </LinearLayout>

</layout>


