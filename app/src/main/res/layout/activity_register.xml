<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
                  name="registerActivity"
                  type="shrinkcom.waff.com.activity.RegisterActivity"/>
    </data>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    xmlns:tools="http://schemas.android.com/tools"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/logo_image"
                    tools:context=".activity.RegisterActivity">

        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:orientation="vertical">

                <ImageView
                        android:layout_width="@dimen/_170sdp"
                        android:layout_height="@dimen/_150sdp"
                        android:layout_gravity="center"
                        android:src="@drawable/splash_screen"/>

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="-32dp"
                        android:layout_marginBottom="12dp"
                        android:fontFamily="@font/markweblight"
                        android:gravity="center"
                        android:text="@string/signup"
                        android:textColor="#000"
                        android:textSize="22dp"/>

                <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                                    android:id="@+id/card_view"
                                                    android:layout_width="@dimen/_240sdp"
                                                    android:layout_height="@dimen/_350sdp"
                                                    android:layout_gravity="center"
                                                    android:layout_marginBottom="@dimen/_50sdp"
                                                    card_view:cardCornerRadius="4dp">

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:gravity="center"
                            android:orientation="vertical">

                        <android.support.design.widget.TextInputLayout
                                android:id="@+id/input_layout_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                            <EditText
                                    android:id="@+id/input_name"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/markweblight"
                                    android:hint="@string/username"
                                    android:inputType="text"
                                    android:singleLine="true"/>
                        </android.support.design.widget.TextInputLayout>

                        <android.support.design.widget.TextInputLayout
                                android:id="@+id/input_layout_email"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                            <EditText
                                    android:id="@+id/input_email"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/markweblight"
                                    android:hint="@string/email"
                                    android:inputType="textEmailAddress"
                                    android:singleLine="true"/>
                        </android.support.design.widget.TextInputLayout>

                        <android.support.design.widget.TextInputLayout
                                android:id="@+id/input_layout_password"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                            <EditText
                                    android:id="@+id/input_password"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/markweblight"
                                    android:hint="@string/password"
                                    android:inputType="textPassword"
                                    android:singleLine="true"/>
                        </android.support.design.widget.TextInputLayout>

                        <android.support.design.widget.TextInputLayout
                                android:id="@+id/input_layout_mobile"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                            <EditText
                                    android:id="@+id/input_mobile"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/markweblight"
                                    android:hint="@string/mobile"
                                    android:inputType="phone"
                                    android:singleLine="true"/>
                        </android.support.design.widget.TextInputLayout>

                        <CheckBox
                                android:id="@+id/term_condi_checkbox"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:layout_marginRight="5dp"
                                android:fontFamily="@font/markweblight"
                                android:text="@string/agree"
                                android:textColor="@color/gradient_center"
                                android:textSize="14dp"/>

                        <Button
                                android:layout_width="140dp"
                                android:layout_height="40dp"
                                android:layout_marginTop="20dp"
                                android:background="@drawable/gradient_background"
                                android:fontFamily="@font/markwebbold"
                                android:gravity="center"
                                android:text="@string/signup"
                                android:onClick="@{() -> registerActivity.requestForRegisterNewUser()}"
                                android:textAllCaps="false"
                                android:textColor="#000"
                                android:textSize="14dp"/>

                        <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp"
                                android:layout_marginBottom="10dp"
                                android:orientation="horizontal"/>

                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <!--  <TextView
                                android:id="@+id/tv_sign_up"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp"
                                android:layout_marginRight="5dp"
                                android:gravity="center"
                                android:text="Don't have an account ? Signin"
                                android:textColor="#FFFFFF"
                                android:textSize="20dp" /> -->

            </LinearLayout>

        </ScrollView>
    </RelativeLayout>
</layout>

