<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:mapbox="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tool="http://schemas.android.com/tools">

    <data>
        <variable name="dashboard"
                  type="shrinkcom.waff.com.activity.Dashboard"/>

    </data>


    <android.support.v4.widget.DrawerLayout
            android:background="@color/white"
            android:orientation="vertical"
            android:id="@+id/drawable_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        <LinearLayout android:layout_width="match_parent"
                      android:orientation="vertical"
                      android:layout_height="match_parent">


            <android.support.v7.widget.CardView
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardUseCompatPadding="false"
            >
                <android.support.v7.widget.Toolbar
                        android:id="@+id/toolbar"
                        android:layout_gravity="start"
                        android:background="@color/mapbox_navigation_route_layer_congestion_yellow"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:theme="@style/ThemeOverlay.AppCompat.Dark"
                        app:logoDescription="LOGO">


                    <RelativeLayout
                            android:padding="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">


                        <ImageView
                                android:onClick="@{() -> dashboard.drawablesidePanel()}"
                                android:id="@+id/side_menu_btn"
                                android:layout_centerVertical="true"
                                android:background="@drawable/slide_arraow"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>


                        <TextView

                                android:text="DashBoard"
                                android:layout_centerInParent="true"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginBottom="12dp"
                                android:gravity="center"
                                android:fontFamily="@font/markweblight"
                                android:textColor="#fff"
                                android:textSize="22dp"/>

                    </RelativeLayout>


                </android.support.v7.widget.Toolbar>

            </android.support.v7.widget.CardView>


            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                <com.mapbox.mapboxsdk.maps.MapView
                        android:id="@+id/waff_mapView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        mapbox:mapbox_cameraTargetLat="40.73581"
                        mapbox:mapbox_cameraTargetLng="-73.99155"
                        mapbox:mapbox_cameraBearing="34.33"
                        mapbox:mapbox_cameraZoom="11"/>


                <EditText
                        android:maxLines="2"
                        android:focusable="false"
                        android:id="@+id/gomydanger"

                        android:clickable="false"
                        android:drawablePadding="@dimen/tendps"
                        android:drawableStart="@drawable/search_icon_view"
                        android:layout_margin="@dimen/tendps"
                        android:padding="@dimen/tendps"
                        android:background="@drawable/where_to_go_back"
                        android:text="@string/where_to_go"
                        android:onClick="@{() -> dashboard.startNavigation()}"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>


                <ImageView
                        android:id="@+id/fab"

                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_above="@+id/drawer_open"
                        android:layout_alignParentRight="true"
                        android:layout_margin="@dimen/fab_margin"
                        android:src="@drawable/danger_fab"
                        />


                <LinearLayout
                        android:visibility="invisible"
                        android:id="@+id/drawer_open"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_55sdp"
                        android:layout_alignParentBottom="true"
                        android:background="@drawable/rounded_dialog"
                        android:gravity="center"
                        android:orientation="horizontal">

                    <ImageView
                            android:id="@+id/actionBarMenuBtn"
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/header_btn_selector"
                            android:paddingLeft="8dp"
                            android:paddingTop="8dp"
                            android:paddingRight="8dp"
                            android:paddingBottom="12dp"
                            android:src="@drawable/search_icon"
                            android:tint="#000000"/>


                    <View
                            android:layout_width="2dp"
                            android:layout_height="50dp"
                            android:layout_marginRight="10dp"
                            android:background="@color/white"/>

                    <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight=".9"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:textSize="16dp"
                            android:fontFamily="@font/markweblight"
                            android:visibility="visible"/>

                    <View
                            android:layout_width="2dp"
                            android:layout_height="50dp"
                            android:layout_marginRight="10dp"
                            android:background="@color/white"/>

                    <android.support.design.widget.FloatingActionButton
                            android:id="@+id/favVol"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|end"
                            android:paddingLeft="8dp"

                            app:srcCompat="@drawable/ic_volume_up_black_24dp"
                            android:paddingTop="8dp"
                            android:paddingBottom="12dp"
                            app:backgroundTint="@color/white"
                            app:rippleColor="@color/white"
                            tool:ignore="VectorDrawableCompat"/>
                </LinearLayout>


            </RelativeLayout>


        </LinearLayout>


        <android.support.design.widget.NavigationView
                android:layout_width="300dp"
                android:layout_gravity="start"

                android:background="@color/mapbox_navigation_route_layer_congestion_yellow"
                android:layout_height="match_parent">


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorPrimary"
                    android:orientation="vertical">


                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#000000"
                        android:orientation="vertical">

                    <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        <ImageView
                                android:id="@+id/textview_setting"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:src="@drawable/setting_icon"
                                android:tint="@color/colorPrimary"/>


                        <ImageView
                                android:layout_margin="10dp"
                                android:layout_alignParentEnd="true"
                                android:id="@+id/logout_btn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/shutdown_icon"
                                android:tint="@color/colorPrimary"/>


                    </RelativeLayout>


                    <LinearLayout android:layout_width="match_parent"
                                  android:orientation="vertical"
                                  android:paddingBottom="10dp"
                                  android:layout_height="wrap_content">


                        <ImageView
                                android:layout_gravity="center"
                                android:id="@+id/imageUser"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:src="@drawable/ic_user"/>


                        <TextView
                                android:textColor="@color/white"

                                android:id="@+id/user_name_tv"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:fontFamily="@font/markweblight"
                                android:text="@string/not_register"
                                android:textStyle="bold"/>

                        <TextView
                                android:id="@+id/user_action_tv"
                                android:textColor="@color/white"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:fontFamily="@font/markweblight"
                                android:text="@string/one_new_msg"/>


                        <TextView
                                android:visibility="invisible"
                                android:id="@+id/textview_favorite"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:textColor="@color/white"
                                android:fontFamily="@font/markweblight"
                                android:text="Favorites"
                                android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>

                    </LinearLayout>


                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/ajesh"
                            android:background="@color/white"
                            android:orientation="vertical">


                        <LinearLayout
                                android:visibility="gone"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1">

                            <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_50sdp"
                                    android:layout_marginLeft="@dimen/_10sdp"
                                    android:layout_marginTop="20dp"
                                    android:layout_marginRight="@dimen/_10sdp">

                                <TextView
                                        android:id="@+id/fab_location_search"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_marginLeft="10dp"
                                        android:layout_marginTop="5dp"
                                        android:imeOptions="actionSearch"
                                        android:singleLine="true"
                                        android:gravity="start|center"
                                        android:layout_marginRight="10dp"
                                        android:background="@drawable/round_edittext"
                                        android:drawableLeft="@drawable/ic_search_black_24dp"
                                        android:drawablePadding="@dimen/_10sdp"
                                        android:fontFamily="@font/markweblight"
                                        android:hint="@string/where_to_go"
                                        android:padding="10dp"/>
                            </LinearLayout>

                        </LinearLayout>


                        <LinearLayout

                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/white"
                                android:orientation="vertical">

                            <LinearLayout
                                    android:id="@+id/home_menu"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight=".5"
                                        android:gravity="center">

                                    <ImageView
                                            android:layout_width="40dp"
                                            android:layout_height="40dp"
                                            android:layout_marginLeft="5dp"
                                            android:src="@drawable/ic_home_black_24dp"
                                            android:tint="@color/colorPrimary"/>

                                </LinearLayout>
                                <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_gravity="center"
                                        android:layout_weight="1.5"
                                        android:gravity="center|left"
                                        android:orientation="vertical">
                                    <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/markwebbold"
                                            android:textColor="@color/colorAccent"
                                            android:text="@string/origin"
                                            android:textSize="@dimen/_14sdp"/>
                                    <TextView
                                            android:minLines="3"
                                            android:maxLines="3"
                                            android:id="@+id/tv_origin_address"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/markweblight"
                                            android:text="@string/set_once_and"/>
                                </LinearLayout>
                            </LinearLayout>

                            <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:background="@color/gray"/>

                            <LinearLayout
                                    android:onClick="@{() -> dashboard.startNewActivityForSelectAddress(5000)}"

                                    android:id="@+id/work_menu"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight=".5"
                                        android:gravity="center">
                                    <ImageView
                                            android:layout_width="34dp"
                                            android:layout_height="34dp"
                                            android:layout_marginLeft="5dp"
                                            android:src="@drawable/ic_work_black_24dp"
                                            android:tint="@color/colorPrimary"/>

                                </LinearLayout>

                                <LinearLayout
                                        android:paddingBottom="@dimen/_5sdp"

                                        android:paddingTop="@dimen/_5sdp"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_gravity="center"
                                        android:layout_weight="1.5"
                                        android:gravity="center|left"
                                        android:orientation="vertical">

                                    <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="10dp"
                                            android:fontFamily="@font/markwebbold"
                                            android:textColor="@color/colorAccent"
                                            android:text="@string/destination"
                                            android:textSize="@dimen/_14sdp"/>

                                    <TextView
                                            android:minLines="3"
                                            android:maxLines="3"
                                            android:id="@+id/tv_destination_address"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/markweblight"
                                            android:text="@string/set_once_and"/>
                                </LinearLayout>
                            </LinearLayout>

                            <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:background="@color/gray"/>

                            <LinearLayout
                                    android:onClick="@{() -> dashboard.goMyDanger()}"
                                    android:gravity="center_vertical"
                                    android:padding="@dimen/tendps"
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                <ImageView
                                           android:background="@drawable/map_default_map_marker"
                                           android:layout_width="wrap_content"
                                           android:layout_height="wrap_content"/>


                                <TextView

                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/markwebbold"
                                        android:textColor="@color/colorAccent"
                                        android:text="@string/my_dangeres"
                                        android:textSize="@dimen/_14sdp"/>


                            </LinearLayout>


                            <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:background="@color/gray"/>


                        </LinearLayout>


                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>


        </android.support.design.widget.NavigationView>


    </android.support.v4.widget.DrawerLayout>

</layout>