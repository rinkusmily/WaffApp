<?xml version="1.0" encoding="utf-8"?>
<com.mapbox.mapboxsdk.annotations.BubbleLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                               xmlns:app="http://schemas.android.com/apk/res-auto"
                                               android:layout_width="wrap_content"
                                               android:layout_height="wrap_content"
                                               android:layout_marginTop="@dimen/_20sdp"
                                               android:elevation="@dimen/_20sdp"
                                               android:orientation="vertical"
                                               android:paddingStart="8dp"
                                               android:paddingLeft="8dp"
                                               android:paddingEnd="8dp"
                                               android:paddingRight="8dp"
                                               android:paddingBottom="6dp"
                                               app:mapbox_bl_arrowDirection="bottom"
                                               app:mapbox_bl_arrowHeight="10dp"
                                               app:mapbox_bl_arrowPosition="50dp"
                                               app:mapbox_bl_arrowWidth="10dp"
                                               app:mapbox_bl_bubbleColor="@android:color/white"
                                               app:mapbox_bl_cornersRadius="15dp"
                                               app:mapbox_bl_strokeColor="@android:color/darker_gray"
                                               app:mapbox_bl_strokeWidth="1dp">

    <ImageView
            android:id="@+id/danger_image_view"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:fontFamily="@font/markwebbold"
            android:gravity="center"
            android:src="@drawable/carpool_home_work_illu"/>

    <LinearLayout
            android:layout_marginTop="@dimen/tendps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:orientation="vertical">

        <TextView
                android:id="@+id/info_window_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/markwebbold"
                android:gravity="center"
                android:text="Hello"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/_13sdp"/>

        <TextView
                android:ems="15"
                android:id="@+id/info_window_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/markweblight"
                android:gravity="center"
                android:text="Hello"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/_12sdp"
        />




        <LinearLayout
                android:layout_marginTop="@dimen/tendps"

                android:padding="@dimen/tendps"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

            <TextView
                    android:ems="5"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:id="@+id/info_window_send"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_btn"
                    android:fontFamily="@font/markwebbold"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:text="@string/Send"
                    android:textColor="@color/colorAccent"
                    android:textSize="14sp"/>

            <TextView
                    android:ems="5"

                    android:layout_marginStart="@dimen/tendps"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:id="@+id/comment_listview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_btn"
                    android:fontFamily="@font/markwebbold"
                    android:gravity="center"
                    android:text="@string/comments"
                    android:textColor="@color/colorAccent"
                    android:textSize="14sp"/>
        </LinearLayout>
    </LinearLayout>
</com.mapbox.mapboxsdk.annotations.BubbleLayout>
